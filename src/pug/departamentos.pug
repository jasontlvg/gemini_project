extends partials/crudLayout.pug



block content
    +puma('Gestion de Departamentos', 'Agregar Departamento')
        block crudContainer__body
            <table class="table">
                <thead class="table__thead thead-dark">
                    <tr class="table__thead__row">
                        <th class="table__thead__row__col" scope="col">#ID</th>
                        <th class="table__thead__row__col" scope="col">Nombre</th>
                        <th class="table__thead__row__col" scope="col">Empresa</th>
                        <th class="table__thead__row__col" scope="col">Editar</th>
                    </tr>
                </thead>
                <tbody class="table__tbody">
                    <tr class="table__tbody__row">
                        <th class="table__tbody__row__col" scope="row">1</th>
                        <td class="table__tbody__row__col">Jason Othoniel</td>
                        <td class="table__tbody__row__col">Torres</td>
                        <td class="table__tbody__row__col table__tbody__row__col--mas">
                            a.table__tbody__row__col__a.table__tbody__row__col--mas__a(href="#")
                                <i class="fas fa-info-circle"></i>
                            a.table__tbody__row__col__a.table__tbody__row__col--mas__a(href="#")
                                <i class="fas fa-edit"></i>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Agregar Departamento</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            form(action="")
                                include partials/departamentosForm.pug
                                <button type="submit" class="btn btn-primary agregar">Agregar</button>
                                <button type="button" class="btn btn-secondary cancelar" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

        


