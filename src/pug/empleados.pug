                                option Masculino
                                option Femenino

                    .formSection__form__section__group
                        .formSection__form__section__group__labelContainer
                            label Jornada
                        .formSection__form__section__group__inputContainer
                            select(name="" class="custom-select")
                                option Diurna
                                option Nocturna                    
                                option Mixta

                    .formSection__form__section__group
                        .formSection__form__section__group__labelContainer
                            label Escolaridad
                        .formSection__form__section__group__inputContainer
                            select(name="" class="custom-select")
                                option Primaria
                                option Secundaria                    
                                option Preparatoria                       
                                option Técnica                       
                                option Universidad                       
                                option Especialización                       
                                option Doctorado                       
                                option Maestría     


                    .formSection__form__section__group
                        .formSection__form__section__group__labelContainer
