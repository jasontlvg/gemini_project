extends partials/adminLayout.pug

block content
    section.formSection
            form.formSection__form(action="")
                
                .formSection__form__section.formSection__form__section--personal

                    .formSection__form__section__group.formSection__form__section__group--datos
                        .formSection__form__section__group__labelContainer.formSection__form__section__group__labelContainer--datos
                            label(for="nombre") Datos
                        .formSection__form__section__group__inputContainer.formSection__form__section__group__inputContainer--datos
                            input#nombre(type="text" class="form-control" aria-describedby="" placeholder="Nombre/s")
                            input(type="text" class="form-control" aria-describedby="" placeholder="A. Paterno")
                            input(type="text" class="form-control" aria-describedby="" placeholder="A. Materno")
                
                    .formSection__form__section__group
                        .formSection__form__section__group__labelContainer
                            label Edad
                        .formSection__form__section__group__inputContainer
                            input(type="number" class="form-control" name="" min="18" max="90")                    
                    
                    .formSection__form__section__group.formSection__form__section--personal__group
                        .formSection__form__section__group__labelContainer
                            label Sexo
                        .formSection__form__section__group__inputContainer
                            select(name="" class="custom-select")
                                option Masculino
                                option Femenino

                    .formSection__form__section__group
                        .formSection__form__section__group__labelContainer
                            label Email
                        .formSection__form__section__group__inputContainer
                            input(type="email" class="form-control" id="exampleInputPassword1" placeholder="")
                
                .formSection__form__section.formSection__form__section--laboral

                    .formSection__form__section__group
                        .formSection__form__section__group__labelContainer
                            label Cargo
                        .formSection__form__section__group__inputContainer
                            select(name="" class="custom-select")
