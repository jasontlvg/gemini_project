extends adminLayout.pug

mixin puma(x,y,z)
    .crudContainer
        .crudContainer__header
            h2.crudContainer__header__title= x
            //- button(type="button" class="btn btn-primary crudContainer__header__button" data-toggle="modal" data-target="#exampleModal" id="calabaza")= y
            button(type="button" class="btn btn-primary crudContainer__header__button" id="calabaza")
                span= y 
                i.crudContainer__header__button__icon(class="fas fa-user-plus")
        .crudContainer__body
            .cajas
                table.table
                    thead.table__thead.thead-dark
                        tr.table__thead__row
                            block table__thead__row__columns
                    tbody.table__tbody
                        tr.table__tbody__row
                            block table__tbody__row__columns
                            <td class="table__tbody__row__col table__tbody__row__col--mas">
                                block table__tbody__row__columns--extra
                                a.table__tbody__row__col__a.table__tbody__row__col--mas__a.table__tbody__row__col--mas__a--edit(href=z)
                                    <i class="fas fa-edit"></i>
                                a.table__tbody__row__col__a.table__tbody__row__col--mas__a.table__tbody__row__col--mas__a--trash(href="#")
                                    <i class="fas fa-trash-alt"></i>
                            </td>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            h5(class="modal-title" id="exampleModalLabel")= y
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            form(action="/linkFormulario" id="form")
                                block formContent
                                <button type="submit" class="btn btn-primary agregar">Agregar</button>
                                <button type="button" class="btn btn-secondary cancelar" data-dismiss="modal" id="cancelar">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
                        
